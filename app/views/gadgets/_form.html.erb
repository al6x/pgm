<%= form_for @gadget, html: {class: "form-horizontal", role: "form"} do |f| %>

  <div class="form-group <%= 'has-error' if @gadget.errors.messages[:name] %>">
    <%= f.label :name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if @gadget.errors.messages[:description] %>">
    <%= f.label :description, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :description, class: "form-control" %>
    </div>
  </div>

  <!-- <div class="form-group">
    <%= f.label :images, class: "col-sm-2 control-label" %>
    <%= f.file_field :image, class: "fix-file-input" %>
  </div> -->

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <% if @gadget.new_record? %>
        <%= link_to 'Back', gadgets_path, class: "btn btn-default", role: "button" %>
        <button type="submit" class="btn btn-primary">Create</button>
      <% else %>
        <%= link_to 'Back', gadget_path(@gadget), class: "btn btn-default", role: "button" %>
        <button type="submit" class="btn btn-primary">Update</button>
      <% end %>
    </div>
  </div>
<% end %>