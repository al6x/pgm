<h1>Sign up</h1>

<br/>

<%= form_tag users_path, class: "form-horizontal", role: "form" do %>

  <div class="form-group <%= 'has-error' if @user.errors.messages[:name] %>">
    <%= label_tag :name, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= text_field_tag :name, params[:name], class: "form-control" %>
    </div>
  </div>

  <div class="form-group <%= 'has-error' if @user.errors.messages[:password] %>">
    <%= label_tag :password, nil, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= password_field_tag :password, '', class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-primary">Sign up</button>
    </div>
  </div>

<% end %>